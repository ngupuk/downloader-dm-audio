{
  "manifest_version": 2,
  "name": "downloader-dm-audio",
  "version": "1.0.0",
  "description": "Simple way to download voice message on Instagram Direct Message.",
  "icons": {
    "128": "icon/icon128.png",
    "48": "icon/icon48.png",
    "16": "icon/icon16.png"
  },
  "browser_action": {
    "default_icon": "icon/icon16.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/direct/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["tabs"]
}
